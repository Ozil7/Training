

<%= form_for :employee, url: employees_path do |f| %>

  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@employee.errors.count, "error") %> prohibited
        this employee from being saved:
      </h2>
      <ul>
        <% @employee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :"Employee Name" %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :"Employee Age" %><br>
    <%= f.text_field :age %>
  </p>
 
  <p>
    <%= f.label :"Designation" %><br>
    <%= f.text_field :designation %>
  </p>
 
 
  <p>
    <%= f.label :Project %><br>
    <%= f.text_field :project %>
  </p>

  <p>
    <%= f.label :"Team Lead"%><br>
    <%= f.text_field :lead %>
  </p>
 

  <p>
    <%= f.label :Skills %><br>
    <%= f.collection_check_boxes :skill_ids, Skill.all, :id, :skill do |m| %>
    <%= m.check_box %> <%= m.label %>
    <% end %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', employees_path %>