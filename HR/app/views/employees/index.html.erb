<h1>Welcome to HR Management Console</h1>

<%= link_to 'Add new employee', new_employee_path %>
 
<table>
  <tr>
    <th>Employee Name</th>
    <th>Age</th>
    <th>Designation</th>
    
    
  </tr>
 
  <% @employees.each do |employee| %>
    <tr>
      <td><%= employee.name %></td>
      <td><%= employee.age %></td>
      <td><%= employee.designation %></td>
      <td><%= link_to 'Show', employee_path(employee) %></td>
      <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
      <td><%= link_to 'Destroy', employee_path(employee),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>